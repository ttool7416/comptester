<configuration>
    <!-- Directory for Ozone Manager metadata -->
    <property>
        <name>ozone.om.metadata.dir</name>
        <value>/var/hadoop/data/nameNode</value>
    </property>

    <!-- Directory for Ozone DataNodes -->
    <property>
        <name>ozone.datanode.data.dir</name>
        <value>/var/hadoop/data/dataNode</value>
    </property>

    <!-- Replication factor for Ozone containers -->
    <property>
        <name>ozone.replication</name>
        <value>1</value>
    </property>

    <!-- Disable IP hostname check for DataNode registration -->
    <property>
        <name>ozone.datanode.ip.hostname.check</name>
        <value>false</value>
    </property>

    <!-- Address for the Ozone Recon service (similar to Secondary NameNode in HDFS) -->
    <property>
        <name>ozone.recon.address</name>
        <value>secondarynn:50090</value>
    </property>

    <!-- Optional: SCM metadata directory -->
    <property>
        <name>ozone.scm.metadata.dir</name>
        <value>/var/hadoop/data/scm</value>
    </property>
</configuration>
